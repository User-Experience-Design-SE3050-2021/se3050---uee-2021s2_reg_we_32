<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupStep4">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="108dp"
        android:layout_height="99dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/peopleswaveicon" />

    <TextView
        android:id="@+id/txtSignup_s1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/poppins"
        android:text="Sign Up"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/login_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ck_bk_s4"
        android:layout_width="295dp"
        android:layout_height="260dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_logo"
        app:srcCompat="@drawable/ck_back" />

    <ImageView
        android:id="@+id/ck_s4"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/ck_bk_s4"
        app:layout_constraintStart_toStartOf="@+id/ck_bk_s4"
        app:layout_constraintTop_toTopOf="@+id/ck_bk_s4"
        app:srcCompat="@drawable/ic_baseline_check_circle_24"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/succ_s4"
        android:layout_width="181dp"
        android:layout_height="75dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/poppins"
        android:text="Sign up Successfully !"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ck_bk_s4"
        app:layout_constraintEnd_toEndOf="@+id/ck_bk_s4"
        app:layout_constraintStart_toStartOf="@+id/ck_bk_s4"
        app:layout_constraintTop_toBottomOf="@+id/ck_s4" />

    <Button
        android:id="@+id/btn_cont_s4"
        android:layout_width="295dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/poppins"
        android:onClick="navigateToLogin"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:typeface="sans"
        app:backgroundTint="@color/theme_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ck_bk_s4" />

</androidx.constraintlayout.widget.ConstraintLayout>